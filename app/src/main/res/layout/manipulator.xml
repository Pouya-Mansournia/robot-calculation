<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pouyamn.robotcalculationapp.Manipulator"
    tools:showIn="@layout/activity_manipulator">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/TV0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Length Link A0" />

        <EditText
            android:id="@+id/ET0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV0"
            android:layout_alignBottom="@+id/TV0"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:hint="Length (Cm)"
            android:inputType="numberDecimal"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV0"
            android:layout_marginTop="20dp"
            android:text="Link mass A0 " />

        <EditText
            android:id="@+id/ET1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV1"
            android:layout_alignBottom="@+id/TV1"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:hint="Link Mass (Kg)"
            android:inputType="numberDecimal"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV1"
            android:layout_marginTop="20dp"
            android:text="Actuator Mass A0 " />

        <EditText
            android:id="@+id/ET2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV2"
            android:layout_alignBottom="@+id/TV2"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:hint="Actuator Mass (Kg)"
            android:inputType="numberDecimal"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV2"
            android:layout_marginTop="20dp"
            android:text="Length Link A1" />

        <EditText
            android:id="@+id/ET3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV3"
            android:layout_alignBottom="@+id/TV3"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:hint="Length (Cm)"
            android:inputType="numberDecimal"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV3"
            android:layout_marginTop="20dp"
            android:text="Link mass A1" />

        <EditText
            android:id="@+id/ET4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV4"
            android:layout_alignBottom="@+id/TV4"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:hint="Link Mass (Kg)"
            android:inputType="numberDecimal"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TV5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV4"
            android:layout_marginTop="20dp"
            android:text="Actuator Mass A1 " />

        <EditText
            android:id="@+id/ET5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV5"
            android:layout_alignBottom="@+id/TV5"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:hint="Actuator Mass (Kg)"
            android:inputType="numberDecimal"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/TV6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV5"
            android:layout_marginTop="20dp"
            android:text="Length Link A2" />

        <EditText
            android:id="@+id/ET6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV6"
            android:layout_alignBottom="@+id/TV6"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:hint="Length (Cm)"
            android:inputType="numberDecimal"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TV7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV6"
            android:layout_marginTop="20dp"
            android:text="Link mass A2" />

        <EditText
            android:id="@+id/ET7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV7"
            android:layout_alignBottom="@+id/TV7"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:hint="Link Mass (Kg)"
            android:inputType="numberDecimal"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/TV8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV7"
            android:layout_marginTop="20dp"
            android:text="Actuator Mass A2 " />

        <EditText
            android:id="@+id/ET8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV8"
            android:layout_alignBottom="@+id/TV8"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:hint="Actuator Mass (Kg)"
            android:inputType="numberDecimal"
            android:textSize="13dp" />


        <Button
            android:id="@+id/button_Calct"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Calculated" />
        <TextView
            android:id="@+id/TV12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_Calct"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Required Torque for Link 0 "
            android:textColor="@color/colortextbold"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Required Torque for Link 1"
            android:textColor="@color/colortextbold"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV13"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Required Torque for Link 2"
            android:textColor="@color/colortextbold"
            android:textSize="18dp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>